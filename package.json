{
  "name": "interviewer-gpt",
  "version": "1.0.0",
  "description": "Professional Interview Simulator powered by AI",
  "main": "index.html",
  "scripts": {
    "start": "npx live-server --port=3000",
    "server": "node server.js",
    "dev": "cross-env OPENAI_API_KEY=$OPENAI_API_KEY concurrently \"npm:server\" \"npm:start\"",
    "build": "npm run minify-css && npm run minify-js",
    "minify-css": "npx clean-css-cli -o assets/css/styles.min.css assets/css/*.css",
    "minify-js": "npx terser assets/js/*.js -o assets/js/app.min.js",
    "test": "npx jest",
    "lint": "npx eslint assets/js/",
    "format": "npx prettier --write .",
    "deploy": "npm run build && npx surge ./dist"
  },
  "keywords": [
    "interview",
    "simulation",
    "technical-interview",
    "behavioral-interview",
    "ai",
    "scoring",
    "feedback"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "prettier": "^3.0.3",
    "terser": "^5.20.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "node-fetch": "^3.3.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
